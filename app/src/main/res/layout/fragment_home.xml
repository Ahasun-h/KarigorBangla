                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true"
                                android:paddingLeft="15dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="Cleaner"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="left" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="Start form 500tk "
                                    android:textStyle="normal"
                                    android:textSize="18sp"
                                    android:gravity="left" />

                            </LinearLayout>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cleaner"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="#00ffffff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/vehicle_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="6"
                        android:background="@color/colorBlue"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/colorMain">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="60dp"
                            android:paddingBottom="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true"
                                android:paddingLeft="15dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="Vehicle services"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="left" />

                                <TextView
