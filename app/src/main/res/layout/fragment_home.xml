                                    android:textSize="18sp"
                                    android:gravity="left" />

                            </LinearLayout>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/car_wash"/>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="#009f2b2b" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/electrecian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="6"
                        android:background="#00FFFFFF"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/colorMain">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="60dp"
                            android:paddingBottom="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true"
                                android:paddingLeft="15dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="Electrician"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="left" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="Start form 500tk "
                                    android:textStyle="normal"
                                    android:textSize="18sp"
                                    android:gravity="left" />

                            </LinearLayout>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/electrecian"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="#00ffffff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/vehicle_services_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="6"
                        android:background="@color/colorBlue"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/colorMain">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="60dp"
                            android:paddingBottom="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true"
                                android:paddingLeft="15dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="Delivery Service"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="left" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="Start form 500tk "
                                    android:textStyle="normal"
                                    android:textSize="18sp"
                                    android:gravity="left" />

                            </LinearLayout>

                        </RelativeLayout>

                        <ImageView
