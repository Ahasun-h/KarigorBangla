<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceProvider.Activity.ServiceProviderJobViewActivity"
    android:background="@color/colorMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/image_boder"
                    android:padding="5dp"
                    android:src="@drawable/ic_user" />

            </RelativeLayout>

            <TextView
                android:id="@+id/job_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:drawablePadding="10dp"
                android:text="Job ID"
                android:inputType="text"
                android:textSize="22sp"
                android:textStyle="normal"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/provider_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:drawablePadding="17dp"
                android:drawableLeft="@drawable/ic_user"
                android:text="Provider Name"
                android:inputType="text"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/provider_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:drawablePadding="10dp"
                android:text="Email"
                android:inputType="text"
                android:textSize="22sp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/email"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/provider_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:drawablePadding="10dp"
                android:text="Provider Address"
                android:inputType="text"
                android:textSize="22sp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/home"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/provider_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:drawablePadding="10dp"
                android:text="Service Date"
                android:inputType="text"
                android:textSize="22sp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/provider_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:drawablePadding="10dp"
                android:text="Service Time"
                android:inputType="text"
                android:textSize="22sp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/provider_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:drawablePadding="10dp"
                android:text="Service Address"
                android:inputType="text"
                android:textSize="22sp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrive"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:background="@drawable/login_bt_bg"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/emaiAndPassword"
                android:layout_marginTop="30dp"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:layout_centerHorizontal="true" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="30dp"/>


        </LinearLayout>

    </ScrollView>





</RelativeLayout>